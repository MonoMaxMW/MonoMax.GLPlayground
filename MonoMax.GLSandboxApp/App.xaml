<Application x:Class="MonoMax.CPQ.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MonoMax.CPQ.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <local:NodeTypeBackgroundConverter x:Key="NodeTypeBackgroundConverter" />
                </ResourceDictionary>
                <ResourceDictionary>
                    <Color x:Key="SelectedItemColor">DodgerBlue</Color>
                    <Color x:Key="SelectionBrushColor">Red</Color>

                    <SolidColorBrush x:Key="SelectedItemBrush" Color="{StaticResource SelectedItemColor}" />
                    <SolidColorBrush x:Key="SelectionBrush" Color="{StaticResource SelectionBrushColor}" />
                </ResourceDictionary>
                <ResourceDictionary>
                    <local:MefBootstrapper x:Key="boot" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
